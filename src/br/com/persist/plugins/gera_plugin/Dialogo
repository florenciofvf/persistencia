import java.awt.Dialog;
import java.awt.Frame;

import br.com.persist.abstrato.AbstratoDialogo;
import br.com.persist.assistencia.Util;
import br.com.persist.formulario.Formulario;

public class ###nameCap###Dialogo extends AbstratoDialogo {
	private static final long serialVersionUID = 1L;
	private final ###nameCap###Container container;

	private ###nameCap###Dialogo(Frame frame, Formulario formulario) {
		super(frame, ###nameCap###Mensagens.getString(###nameCap###Constantes.LABEL_###nameUpper###));
		container = new ###nameCap###Container(this, formulario);
		container.set###nameCap###Dialogo(this);
		montarLayout();
	}

	private void montarLayout() {
		add(BorderLayout.CENTER, container);
	}

	public static void criar(Formulario formulario) {
		###nameCap###Dialogo form = new ###nameCap###Dialogo(formulario, formulario);
		Util.configSizeLocation(formulario, form, null);
		form.setVisible(true);
	}

	public void excluirContainer() {
		remove(container);
		container.setJanela(null);
		container.set###nameCap###Dialogo(null);
		fechar();
	}

	@Override
	public void dialogOpenedHandler(Dialog dialog) {
		container.dialogOpenedHandler(dialog);
	}
}